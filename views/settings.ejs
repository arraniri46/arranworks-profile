<script>
    const imageInput = document.querySelector('#input-gambar input[type=file]');

    imageInput.onchange = () => {
        if (imageInput.files.length > 0) {
        const fileName = document.querySelector('#input-gambar .file-name');
        fileName.textContent = imageInput.files[0].name;
        }
    }
</script>