                    <div class="column" style="max-height: 550px; overflow-y:scroll;">
                        <div class="is-flex is-flex-direction-row is-flex-wrap-wrap is-justify-content-start">
                            <% certificates.forEach(certificate => { %>
                                <div class="card m-2" style="width: 180px;">
                                  <div class="card-image">
                                    <figure class="image is-4by3">
                                      <img src="http://bulma.io/images/placeholders/1280x960.png" alt="Image">
                                    </figure>
                                  </div>
                                  <div class="card-content" style="overflow: hidden;">
                                    <h4 class="title is-size-6 is-spaced"><%= certificate.title %> </h4>
                                    <h6 class="subtitle is-6"><%= certificate.subtitle %></h6>
                                  </div>
                                  <footer class="card-footer ">
                                    <div class="buttons">
                                      <button class="button is-primary is-small">Edit</button>
